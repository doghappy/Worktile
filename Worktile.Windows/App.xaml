<Application
    x:Class="Worktile.Windows.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Worktile.Windows">

    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="Wtf">ms-appx:///Worktile.Windows,,,/Assets/Fonts/iconfont.ttf#wtf</FontFamily>
            <Style TargetType="FontIcon" x:Key="WtfIcon">
                <Setter Property="FontFamily" Value="{StaticResource Wtf}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Background="#F2FDFDFD" Padding="0 0 10 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Margin="0 10 0 0">
                <HyperlinkButton HorizontalAlignment="Right" VerticalAlignment="Center">
                    <HyperlinkButton.Content>
                        <FontIcon Style="{ThemeResource WtfIcon}" Glyph="&#xe600;"/>
                    </HyperlinkButton.Content>
                </HyperlinkButton>
            </Grid>

            <ScrollViewer Grid.Row="1">
                <StackPanel>
                    <ListView ItemsSource="{x:Bind ViewModel.WorkAddons}"
                              SelectedItem="{x:Bind ViewModel.SelectedWork, Mode=TwoWay}"
                              Margin="0 0 0 16">
                        <ListView.Header>
                            <TextBlock x:Uid="Project-Left-DashboardTextBlock" Style="{ThemeResource ListViewHeader}"/>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="mission:WorkAddon">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon Style="{ThemeResource WtfIcon}" Glyph="{x:Bind Icon}" Foreground="#48525c"/>
                                    <TextBlock Text="{x:Bind Name}" Style="{ThemeResource ProjectItemLabel}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <!--<TextBlock x:Uid="Project-Left-DashboardTextBlock" Style="{ThemeResource ListViewHeader}"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.WorkAddons}"
                                  Margin="0 0 0 16">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="project:WorkAddon">
                                <Button Style="{ThemeResource AdvancedButton}">
                                    <ListViewItem HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                            <FontIcon Style="{ThemeResource WtfIcon}" Glyph="{x:Bind Icon}" Foreground="#48525c"/>
                                            <TextBlock Text="{x:Bind Name}" Style="{ThemeResource ProjectItemLabel}"/>
                                        </StackPanel>
                                    </ListViewItem>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>-->
                    <ListView ItemsSource="{x:Bind ViewModel.StickMissions}"
                              SelectedItem="{x:Bind ViewModel.SelectedStickProject, Mode=TwoWay}"
                              Margin="0 0 0 16">
                        <ListView.Header>
                            <TextBlock x:Uid="Project-Left-FavoriteTextBlock" Style="{ThemeResource ListViewHeader}"/>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="mission:MissionItem">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon Style="{ThemeResource WtfIcon}" Glyph="&#xe667;" Foreground="{x:Bind Color}"/>
                                    <TextBlock Text="{x:Bind Name}" Style="{ThemeResource ProjectItemLabel}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView ItemsSource="{x:Bind ViewModel.Missions}"
                              SelectedItem="{x:Bind ViewModel.SelectedProject, Mode=TwoWay}"
                              Margin="0 0 0 16">
                        <ListView.Header>
                            <TextBlock x:Uid="Project-Left-ProjectTextBlock" Style="{ThemeResource ListViewHeader}"/>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="mission:MissionItem">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon Style="{ThemeResource WtfIcon}"
                                              Glyph="{x:Bind Icon}"
                                              Foreground="{x:Bind Color}"/>
                                    <TextBlock Text="{x:Bind Name}" Style="{ThemeResource ProjectItemLabel}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TextBlock x:Uid="Project-Left-AdvancedTextBlock" Style="{ThemeResource ListViewHeader}"/>
                    <!--配置中心-->
                    <!--<Button Style="{ThemeResource AdvancedButton}">
                        <ListViewItem HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                <FontIcon Style="{ThemeResource WtfIcon}" Glyph="&#xe640;" Foreground="#aaa"/>
                                <TextBlock x:Uid="Project-Left-ConfigurationCenterTextBlock" Style="{ThemeResource ProjectItemLabel}"/>
                            </StackPanel>
                        </ListViewItem>
                    </Button>-->
                    <Button Style="{ThemeResource AdvancedButton}">
                        <ListViewItem HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                <FontIcon Style="{ThemeResource WtfIcon}" Glyph="&#xe639;" Foreground="#aaa"/>
                                <TextBlock x:Uid="Project-Left-RecycleBinTextBlock" Style="{ThemeResource ProjectItemLabel}"/>
                            </StackPanel>
                        </ListViewItem>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Frame x:Name="ContentFrame" Grid.Column="1">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition/>
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>
    </Grid>
</Page>

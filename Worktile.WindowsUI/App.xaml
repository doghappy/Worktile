<Application
    x:Class="Worktile.WindowsUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Worktile.WindowsUI"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="Primary" Color="#22d7bb"/>
            <SolidColorBrush x:Key="Danger" Color="#ff5b57"/>
            <SolidColorBrush x:Key="TextPrimary" Color="#48525c"/>

            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="Background" Value="{ThemeResource Primary}"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style TargetType="FontIcon" x:Key="WtfIcon">
                <Setter Property="FontFamily" Value="/Assets/Fonts/iconfont.ttf#wtf"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

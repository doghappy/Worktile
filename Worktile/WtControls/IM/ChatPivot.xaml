                    <StackPanel x:Name="EmptyPanel" VerticalAlignment="Center" x:Load="{x:Bind EmptyFrameVisible, Mode=OneWay}">
                        <FontIcon Style="{StaticResource WtfIcon}"
                                      Glyph="&#xE655;"
                                      Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                      FontSize="100"/>
                        <TextBlock Text="没有未读消息"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                       Margin="0 20 0 0"/>
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </Pivot.ItemTemplate>
    </Pivot>
</UserControl>

<Page
    x:Class="Worktile.Views.Message.MasterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cvt="using:Worktile.Converters"
    xmlns:tethys="using:Worktile.Tethys"
    xmlns:session="using:Worktile.Models.Message.Session"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Page.Resources>
        <ResourceDictionary>
            <cvt:NumberVisibilityConverter x:Key="NumberVisibilityConverter"/>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Padding="{StaticResource TitleBarHeight}" Background="{ThemeResource SystemControlAcrylicWindowBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Padding="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="消息" Style="{ThemeResource TitleTextBlockStyle}" FontWeight="SemiBold"/>

                    <Button Grid.Column="1" HorizontalAlignment="Right" Style="{ThemeResource TextBlockButtonStyle}">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyout.Items>
                                    <MenuFlyoutItem Text="创建组群" Click="CreateGroup_Click">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xEBDA;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="加入组群" Click="JoinGroup_Click">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE902;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="发起私聊" Click="CreateChat_Click">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE8BD;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="添加成员" Click="AddMember_Click">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE8FA;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout.Items>
                            </MenuFlyout>
                        </Button.Flyout>

                        <FontIcon Style="{ThemeResource WtfIcon}" FontSize="24" Glyph="&#xE633;"/>
                    </Button>
                </Grid>

                <ListView Grid.Row="1"
                          ItemsSource="{x:Bind ViewModel.Sessions}"
                          RightTapped="ListView_RightTapped"
                          SelectedItem="{x:Bind ViewModel.SelectedSession, Mode=TwoWay}">

                    <ListView.Resources>
                        <MenuFlyout x:Name="ListViewItemMenuFlyout">
                            <MenuFlyout.Items>
                                <MenuFlyoutItem Text="成员资料">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE136;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="置顶"
                                                Visibility="{x:Bind ViewModel.StarVisibility, Mode=OneWay}"
                                                Click="StarButton_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE11C;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="取消置顶"
                                                Visibility="{x:Bind ViewModel.UnStarVisibility, Mode=OneWay}"
                                                Click="UnStarButton_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE845;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="删除" Click="DeleteButton_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE107;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout.Items>
                        </MenuFlyout>
                    </ListView.Resources>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="session:ISession">
                            <Grid>
                                <Grid Padding="12 8" HorizontalAlignment="Stretch">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <tethys:Avatar Size="30"
                                                   Foreground="White"
                                                   Source="{x:Bind TethysAvatar.Source}"
                                                   DisplayName="{x:Bind TethysAvatar.DisplayName}"
                                                   BadgeIcon="{x:Bind TethysAvatar.Icon}"
                                                   Background="{x:Bind TethysAvatar.Background}"
                                                   BadgeIconFontFamily="{x:Bind TethysAvatar.AvatarFont}"/>

                                    <TextBlock Grid.Column="1"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="8 0 0 0"
                                               Text="{x:Bind TethysAvatar.DisplayName}"/>
                                    <Border Grid.Column="1"
                                        Visibility="{x:Bind UnRead, Mode=OneWay, Converter={StaticResource NumberVisibilityConverter}, ConverterParameter='!'}"
                                        Padding="8 0"
                                        Background="{StaticResource DangerBrush}"
                                        CornerRadius="8"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right">
                                        <TextBlock Text="{x:Bind UnRead, Mode=OneWay}" FontSize="12" Foreground="White"/>
                                    </Border>
                                </Grid>
                                <Polygon x:Name="StarredPolygon"
                                         x:Load="{x:Bind Starred, Mode=OneWay}"
                                         Points="0,0 8,0 0,8"
                                         Fill="{ThemeResource SystemAccentColor}"
                                         VerticalAlignment="Top"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Column="1">
                <Frame x:Name="ContentFrame">
                    <Frame.ContentTransitions>
                        <TransitionCollection>
                            <NavigationThemeTransition/>
                        </TransitionCollection>
                    </Frame.ContentTransitions>
                </Frame>
            </Grid>
        </Grid>
        <ProgressRing Width="80" Height="80" IsActive="{x:Bind ViewModel.IsActive, Mode=OneWay}"/>
    </Grid>
</Page>

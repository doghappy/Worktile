<ContentDialog
    x:Class="Worktile.Views.Message.Dialog.JoinGroupDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Worktile.Views.Message.Dialog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:message="using:Worktile.Views.Message"
    xmlns:tethys="using:Worktile.Tethys"
    xmlns:cvt="using:Worktile.Converters"
    mc:Ignorable="d"
    Title="加入群组"
    PrimaryButtonText="关闭"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    Loaded="ContentDialog_Loaded">

    <ContentDialog.Resources>
        <cvt:BooleanReserveConverter x:Key="BooleanReserveConverter"/>
        <x:Double x:Key="ContentDialogMaxWidth">640</x:Double>
        <x:Double x:Key="ContentDialogMinHeight">756</x:Double>
    </ContentDialog.Resources>

    <Grid Width="580">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <AutoSuggestBox Margin="0 0 0 12"
                        QueryIcon="Find"
                        PlaceholderText="搜索组群..."
                        TextChanged="AutoSuggestBox_TextChanged"/>

        <ListView Grid.Row="1" ItemsSource="{x:Bind Sessions}" SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="12"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="message:Session">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <tethys:Avatar Size="40"
                                       Foreground="White"
                                       Source="{x:Bind ProfilePicture}"
                                       DisplayName="{x:Bind DisplayName}"
                                       BadgeIcon="{x:Bind DefaultIcon}"
                                       Background="{x:Bind Background}"
                                       BadgeIconFontFamily="{x:Bind AvatarFont}"/>

                        <Grid Grid.Column="1" Padding="8 0 0 0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="{x:Bind DisplayName}"/>
                            <TextBlock Grid.Row="1" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                                <Run Text="{x:Bind CreatedBy.DisplayName}"/>
                                <Run Text="创建于"/>
                                <Run Text="{x:Bind CreatedAt}"/>
                            </TextBlock>
                        </Grid>

                        <Button x:Name="JoinButton"
                                x:Load="{x:Bind Joined, Converter={StaticResource BooleanReserveConverter}}"
                                Grid.Column="2"
                                Style="{ThemeResource TextBlockButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Add"/>
                                <TextBlock Margin="8 0 0 0" Text="加入"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="SendMessageButton"
                                x:Load="{x:Bind Joined}"
                                Click="SendMessageButton_Click"
                                DataContext="{x:Bind}"
                                Grid.Column="2"
                                Style="{ThemeResource TextBlockButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Message"/>
                                <TextBlock Margin="8 0 0 0" Text="发消息"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ProgressRing Grid.Row="1" Width="80" Height="80" IsActive="{x:Bind IsActive, Mode=OneWay}"/>
    </Grid>
</ContentDialog>

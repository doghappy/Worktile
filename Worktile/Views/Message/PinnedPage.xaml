<Page
    x:Class="Worktile.Views.Message.PinnedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Worktile.Views.Message"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tethys="using:Worktile.Tethys"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView ItemsSource="{x:Bind Messages}" SelectionMode="{x:Bind SelectionMode, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Message">
                    <Grid Margin="0 16 16 16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <tethys:Avatar Size="40"
                                       Margin="16,0"
                                       VerticalAlignment="Top"
                                       DisplayName="{x:Bind Avatar.DisplayName}"
                                       Foreground="{x:Bind Avatar.Foreground}"
                                       Background="{x:Bind Avatar.Background}"
                                       Source="{x:Bind Avatar.Source}"/>

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Polygon Points="0,0 16,0 16,16" Fill="{ThemeResource SystemControlAcrylicElementBrush}" Margin="0,12,0,0"/>
                            <Grid Grid.Column="1" Background="{ThemeResource SystemControlAcrylicElementBrush}" Padding="12" HorizontalAlignment="Left">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{x:Bind Content}" TextWrapping="Wrap"/>
                                <StackPanel Grid.Row="1" Margin="0 16 0 0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="{x:Bind Avatar.DisplayName}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind Time}" Margin="12,0,0,0" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ProgressRing Width="80" Height="80" IsActive="{x:Bind IsActive, Mode=OneWay}"/>

        <CommandBar Grid.Row="1">
            <AppBarButton Label="单选模式"
                          Visibility="{x:Bind SingleButtonVisibility, Mode=OneWay}"
                          Click="SingleSelectButton_Click">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE0A2;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="多选模式"
                          Visibility="{x:Bind MultipleButtonVisibility, Mode=OneWay}"
                          Click="MultipleSelectButton_Click">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE762;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Icon="Delete" Label="删除"/>
        </CommandBar>
    </Grid>
</Page>

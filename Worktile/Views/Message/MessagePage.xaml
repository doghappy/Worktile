<Page
    x:Class="Worktile.Views.Message.MessagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Worktile.Views.Message"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Padding="{StaticResource TitleBarHeight}" Background="#F2FDFDFD">
            <ListView>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListViewItem>
                    <Grid Padding="0 8" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <PersonPicture Width="24" Initials="WX" ProfilePicture="https://s3.cn-north-1.amazonaws.com.cn/lcavatar/7f79f351-408d-459f-b880-620eef734b65_80x80.png"/>
                        <TextBlock Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8 0 0 0" Text="DisplayName"/>
                        <Border Grid.Column="1"
                                Visibility="Visible"
                                Padding="8 0"
                                Background="{StaticResource DangerBrush}"
                                CornerRadius="8"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right">
                            <TextBlock Text="99+" FontSize="12" Foreground="White"/>
                        </Border>
                    </Grid>
                </ListViewItem>
                <ListViewItem>
                    <Grid Padding="0 8" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <PersonPicture Width="24" Initials="WX" ProfilePicture="https://s3.cn-north-1.amazonaws.com.cn/lcavatar/7f79f351-408d-459f-b880-620eef734b65_80x80.png"/>
                        <TextBlock Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8 0 0 0" Text="DisplayName"/>
                        <Border Grid.Column="1"
                                Visibility="Visible"
                                Padding="8 0"
                                Background="{StaticResource DangerBrush}"
                                CornerRadius="8"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right">
                            <TextBlock Text="99+" FontSize="12" Foreground="White"/>
                        </Border>
                    </Grid>
                </ListViewItem>

<UserControl
    x:Class="Worktile.Controls.Message.ImageMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cvt="using:Worktile.Converters"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <cvt:ThumbnailImageSourceConverter x:Key="ThumbnailImageSourceConverter"/>
    </UserControl.Resources>

    <Button Background="Transparent"
            BorderThickness="0"
            Padding="0"
            IsEnabled="{x:Bind IsButtonEnabled, Mode=OneWay}"
            Click="Button_Click">
        <Button.Resources>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
        </Button.Resources>
        <Grid>
            <Image
                Source="{x:Bind Message.Body.Attachment.Addition.Thumbnail, Converter={StaticResource ThumbnailImageSourceConverter}, Mode=OneWay}"
                MaxWidth="480"
                MaxHeight="320"/>
            <ProgressRing Width="40" Height="40" IsActive="{x:Bind IsActive, Mode=OneWay}"/>
        </Grid>
    </Button>
</UserControl>

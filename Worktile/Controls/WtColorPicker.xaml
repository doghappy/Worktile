<UserControl
    x:Class="Worktile.Controls.WtColorPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Worktile.Controls"
    xmlns:cvt="using:Worktile.Converters"
    mc:Ignorable="d"
    Loaded="UserControl_Loaded"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <cvt:EqualBooleanConverter x:Key="EqualBooleanConverter"/>
    </UserControl.Resources>

    <GridView ItemsSource="{x:Bind Colors}"
              SelectedItem="{x:Bind SelectedColor, Mode=TwoWay}"
              SelectionChanged="GridView_SelectionChanged">
        <GridView.ItemTemplate>
            <DataTemplate x:DataType="x:String">
                <Border
                    Width="{StaticResource GridViewItemMinWidth}"
                    Height="{StaticResource GridViewItemMinHeight}"
                    Background="{x:Bind}">
                    <FontIcon 
                        x:Name="CheckIcon"
                        Visibility="Collapsed"
                        Foreground="White"
                        Glyph="&#xE73E;"/>
                </Border>
            </DataTemplate>
        </GridView.ItemTemplate>
    </GridView>
</UserControl>

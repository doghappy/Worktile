                    </DataTemplate>-->
                </ListView.ItemTemplate>
            </ListView>

            <Button Grid.Row="2" Margin="0 16" Padding="0" Width="52" Height="52" CornerRadius="52" HorizontalAlignment="Center">
                <tethys:Avatar
                    Width="48" Height="48"
                    DisplayName="{x:Bind Me.DisplayName, Mode=OneWay}"
                    Background="{x:Bind Me.DisplayName, Mode=OneWay, Converter={StaticResource AvatarBackgroundConverter}}"
                    Source="{x:Bind Me.Avatar, Mode=OneWay, Converter={StaticResource AvatarSourceConverter}}"/>
            </Button>
            <!--<mtc:ImageEx Grid.Row="2" CornerRadius="52" Width="52" Height="52" Source="/Assets/StoreLogo.scale-100.png" />
            <Image Grid.Row="2" Width="52" Height="52" cor Margin="0 16" Source="/Assets/StoreLogo.scale-100.png"/>-->
        </Grid>

        <Frame Grid.Column="1" x:Name="ContentFrame">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition/>
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>
    </Grid>
</Page>

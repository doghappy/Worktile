            <Rectangle Width="60" Height="60" Fill="Blue" VerticalAlignment="Top"/>
            <Rectangle Width="40" Height="40" Fill="Red" VerticalAlignment="Top"/>
            <Rectangle Width="60" Height="60" Fill="Blue" VerticalAlignment="Top"/>
            <Rectangle Width="80" Height="80" Fill="Yellow" VerticalAlignment="Top"/>
            <Rectangle Width="60" Height="60" Fill="Blue" VerticalAlignment="Top"/>
            <Rectangle Width="40" Height="40" Fill="Red" VerticalAlignment="Top"/>
            <Rectangle Width="60" Height="60" Fill="Blue" VerticalAlignment="Top"/>
            <Rectangle Width="80" Height="80" Fill="Yellow" VerticalAlignment="Top"/>
            <Rectangle Width="60" Height="60" Fill="Blue" VerticalAlignment="Top"/>
            <Rectangle Width="40" Height="40" Fill="Red" VerticalAlignment="Top"/>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="using:Worktile.Tethys">

    <Style TargetType="controls:MultipleComboBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:MultipleComboBox">
                    <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <TextBlock Text="MultipleComboBox"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
